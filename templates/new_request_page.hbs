<section id="banner" class="w-full h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-[300px] object-cover"
	/>
</section>

<section id="main-content" class="flex-1 h-full bg-white py-8">
	<div class="flex flex-col max-w-7xl mx-auto px-4 lg:px-0">
		<div class="w-full">
			<a
				href="{{page_path 'help_center'}}"
				class="flex items-center text-sm text-fc-dark gap-2"
			>
				<i class="ph ph-caret-left text-md mt-0.5"></i>
				Späť na hlavnú stránku
			</a>
		</div>

		<section class="flex-1 flex flex-col gap-4 mt-4">
			<h1 class="text-2xl text-fc-dark font-bold mt-8">
				{{t "submit_a_request"}}
			</h1>

			<div class="w-full lg:w-1/2 mt-4">
				{{request_form}}
			</div>

			<p id="ingame-warning" class="hidden text-fc-dark text-sm">
				<span>
					<i class="ph ph-bold ph-warning text-yellow-500"></i>
				</span>
				Pre otázky týkajúce sa hry a problémy so transakciami navštívte
				prosím
				<span>
					<a
						href="https://help.ea.com/en/help-top-issues/?product=fc-mobile"
						target="_blank"
						class="text-fc-green hover:text-fc-dark-green transition-colors"
					>
						EA FC Mobile Help Center
					</a>
				</span>
				na ďalšie preskúmanie.
			</p>
		</section>
	</div>
</section>