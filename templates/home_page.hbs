<section id="infobar-container" class="w-full flex flex-col">
	{{dc "ea_fcm_hc_infobar_global"}}
</section>

<section id="banner" class="w-full min-h-[250px] h-full relative">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-[300px] object-cover"
	/>
	<div
		class="w-full h-full flex items-center justify-center absolute top-0 px-4"
	>
		<label
			class="input h-[48px] w-full md:w-[450px] lg:w-[500px] flex items-center mx-auto gap-2 rounded-full border border-fc-dark/50 bg-white focus:border-fc-green focus:outline-fc-green focus-within:outline-fc-green focus-within:border-fc-green"
		>
			{{search
				instant=true
				submit=false
				class="min-w-[250px] w-full md:w-[450px] lg:w-[500px] border-none focus:outline-none"
			}}
			<svg
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 16 16"
				fill="currentColor"
				class="w-4 h-4 opacity-70"
			>
				<path
					fill-rule="evenodd"
					d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
					clip-rule="evenodd"
				/>
			</svg>
		</label>
	</div>
</section>

<section id="main-content" class="w-full">
	<section id="channels" class="flex-1 bg-white py-8">
		<article
			class="flex-1 md:max-w-7xl mx-auto flex flex-col items-center px-4 xl:px-0"
		>
			<h3 class="text-2xl text-fc-dark md:text-3xl font-bold">
				{{dc "ea_fcm_hc_connect_cs_title"}}
			</h3>
			<p class="mt-2 text-fc-dark text-center">
				{{dc "ea_fcm_hc_connect_cs_subtitle"}}
			</p>
			<div
				class="max-[640px]:w-full flex items-center flex-col sm:flex-row gap-2 mt-4"
			>
				<a
					href="{{page_path 'new_request'}}"
					class="btn w-full sm:w-[250px] bg-fc-green hover:bg-fc-green/85 border-none text-fc-dark"
				>
					<i class="ph ph-envelope text-fc-dark text-2xl"></i>
					{{dc "ea_fcm_hc_contact_us_text"}}
				</a>
				<a
					href="https://store.fcm.ea.com/th-th"
					class="btn w-full sm:w-[250px] bg-fc-green hover:bg-fc-green/85 border-none text-fc-dark"
				>
					<i class="ph ph-globe text-fc-dark text-2xl"></i>
					{{dc "ea_fcm_hc_visit_webstore_text"}}
				</a>
			</div>
		</article>
	</section>

	<section id="all-articles-section" class="flex-1 bg-white py-8">
		<article class="flex-1 md:max-w-7xl mx-auto flex flex-col px-4 xl:px-0">
			<h3 class="text-2xl text-fc-dark md:text-3xl font-bold">
				{{dc "ea_fcm_hc_homepage_articles_title"}}
			</h3>
			<p class="mt-2 text-fc-dark text-sm">
				{{dc "ea_fcm_hc_homepage_articles_subtitle"}}
			</p>

			<div class="w-full flex flex-col gap-4 mt-8">
				{{#each categories}}
					{{#each sections}}
						<div class="w-full flex flex-col gap-2">
							<h4
								class="font-bold text-fc-dark text-lg"
							>{{name}}</h4>
							{{#each articles}}
								{{#if (compare @index "<" 5)}}
									<a
										id="article-{{id}}"
										href="{{url}}"
										class="btn btn-outline border-2 border-fc-green hover:border-fc-green hover:bg-fc-green w-full flex font-bold text-[14px] text-fc-dark text-start rounded-md overflow-x-hidden leading-normal"
									>
										<span class="w-full line-clamp-1">
											{{title}}
										</span>
									</a>
								{{/if}}
							{{/each}}
							{{#if (compare article_count ">" 5)}}
								<a
									href="{{url}}"
									class="btn btn-link no-underline hover:no-underline flex items-center w-max text-fc-dark-green/85 hover:text-fc-dark-green md:ms-auto"
								>
									{{t "see_more"}}
									<i class="ph ph-arrow-up-right"></i>
								</a>
							{{/if}}
						</div>
					{{/each}}
					<a
						href="{{url}}"
						class="btn border-fc-dark-green bg-fc-dark-green/85 hover:bg-fc-dark-green text-white"
					>
						{{t "see_all_sections"}}
					</a>
				{{/each}}
			</div>
		</article>
	</section>
</section>