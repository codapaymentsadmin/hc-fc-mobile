<section id="banner" class="w-full min-h-[250px] h-full relative">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-[400px] object-cover object-[50%_25%]"
	/>

	<div
		class="w-full h-full flex items-center justify-center absolute top-0 px-4"
	>
		<label
			class="input h-[32px] w-full md:w-[450px] lg:w-[500px] flex items-center mx-auto gap-2 rounded-full border border-fc-dark/50 bg-white focus:border-fc-green focus:outline-fc-green focus-within:outline-fc-green focus-within:border-fc-green"
		>
			{{search
				instant=true
				submit=false
				class="min-w-[250px] w-full md:w-[450px] lg:w-[500px] border-none focus:outline-none text-sm"
			}}
			<svg
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 16 16"
				fill="currentColor"
				class="w-4 h-4 opacity-70"
			>
				<path
					fill-rule="evenodd"
					d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
					clip-rule="evenodd"
				/>
			</svg>
		</label>
	</div>
</section>

<section id="main-content" class="flex-1 h-full py-8 bg-white">
	<div class="flex flex-col max-w-7xl mx-auto px-4 lg:px-0">
		<div class="w-full px-4 lg:px-0">
			<a
				href="{{page_path 'help_center'}}"
				class="flex items-center text-sm gap-2 text-fc-dark"
			>
				<i class="ph ph-caret-left text-md mt-0.5"></i>
				{{dc "ea_fc_hc_back_to_homepage_text"}}
			</a>
		</div>

		{{!-- <h2 class="text-xl md:text-2xl text-start text-fc-dark font-bold mt-4">
			All
			{{category.name}}
			Topics
		</h2>
		<p class="text-md text-start text-fc-dark mt-2">
			{{category.description}}
		</p> --}}

		{{#each sections}}
			<div class="w-full flex flex-col justify-start mt-8">
				<h4
					class="text-lg md:text-xl text-start text-fc-dark font-semibold"
				>
					{{name}}
				</h4>
				<div class="flex-1 flex flex-col">
					<div
						class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 mt-2"
					>
						{{#each articles}}
							{{#if (compare @index "<" 5)}}
								<a
									id="article-{{id}}"
									href="{{url}}"
									class="btn btn-outline border-2 border-fc-green hover:border-fc-green hover:bg-fc-green w-full flex text-[14px] text-fc-dark font-bold text-start rounded-md overflow-x-hidden leading-normal"
								>
									<span class="w-full line-clamp-1">
										{{title}}
									</span>
								</a>
							{{/if}}
						{{/each}}
					</div>
					{{#if (compare article_count ">" 5)}}
						<a
							href="{{url}}"
							class="btn btn-link no-underline hover:no-underline flex items-center w-max text-fc-dark-green/85 hover:text-fc-dark-green pl-0"
						>
							{{t "see_more"}}
							<i class="ph ph-arrow-up-right"></i>
						</a>
					{{/if}}
				</div>
			</div>
		{{/each}}
	</div>
</section>